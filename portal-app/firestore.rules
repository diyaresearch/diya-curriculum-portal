rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User profile documents (legacy)
    match /users/{userId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Prefixed user docs
    match /prod.users/{userId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Authenticated user role/profile docs used by the app
    match /teachers/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /students/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Public content collections (dev + prod)
    match /content/{contentId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /prod.content/{contentId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /module/{moduleId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /prod.module/{moduleId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /lesson/{lessonId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /prod.lesson/{lessonId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}